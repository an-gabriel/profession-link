{
  "type": "postgres",
  "host": "localhost",
  "port": 5432,
  "username": "${POSTGRES_USER}",
  "password": "${POSTGRES_PASSWORD}",
  "database": "${POSTGRES_DB}",
  "synchronize": true,
  "logging": true,
  "entities": [
    "src/**/*.entity.ts"
  ],
  "migrations": [
    "src/migrations/**/*.ts"
  ],
  "cli": {
    "entitiesDir": "src",
    "migrationsDir": "src/migrations"
  }
}
