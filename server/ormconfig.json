{
  "type": "postgres",
  "host": "localhost",
  "port": 5432,
  "username": "${POSTGRES_USER}",
  "password": "${POSTGRES_PASSWORD}",
  "database": "${POSTGRES_DB}",
  "synchronize": true,
  "logging": true,
  "entities": [
    "src/modules/**/entities/*.entity.ts"
  ],
  "migrations": [
    "src/modules/**/migrations/*.ts"
  ],
  "cli": {
    "migrationsDir": "src/modules"
  }
}
